{
  "name": "Take a Break",
  "version": "1.0",
  "description": "Helping you to rememeber to take a break",
  "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
  "browser_action": {
  	"default_icon": {
  		"16": "images/mind.png",
        "32": "images/mind.png",
        "48": "images/mind.png",
        "128": "images/mind.png"
  	},
	"default_popup": "popup.html",
	"default_title": "Helping you to remember to take a break"
	
  },
  "icons": {
     "16": "images/mind.png",
     "32": "images/mind.png",
     "48": "images/mind.png",
     "128": "images/mind.png"
    },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "notifications",
	"storage"
  ]
}
